# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyd binary

# Jupyter notebooks
*.ipynb text eol=lf

# Data files
*.csv text eol=lf
*.tsv text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
LICENSE text eol=lf
README* text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Binary files
*.pt binary
*.pth binary
*.h5 binary
*.hdf5 binary
*.pkl binary
*.pickle binary
*.npy binary
*.npz binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf